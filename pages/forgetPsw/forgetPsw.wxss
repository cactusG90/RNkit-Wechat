page{
  font-size: 14px;
}
.userMobile, .vCode, .password{
  display: flex;
  background: #fff;
  padding: 0 25px;
  border-bottom: 1px solid #f5f5f5;
}
.userMobile{
  padding-right: 10px; 
}
.userMobile text, .vCode text, .password text{
  flex: 1;
  line-height:45px;
  text-align:center;
}
.register .password text{
  letter-spacing:10px;
}
.userMobile input, .vCode input, .password input{
    height: 45px;
    flex: 4;
}
.userMobile input{
  flex:3;
}
.userMobile .getCodeBtn{
  height: 35px;
  width:29%;
  padding:0;
  font-size:14px;
  line-height:35px;
  margin-top: 5px;
}
.register .input-placeholder{
  text-indent: 5px;
}
button[disabled][type="primary"] {
  background-color:#20a0ff;
  opacity: 0.7;
}
.button-hover[type="primary"] {
  background-color:#20a0ff;
}
.register .submit{
  margin: 20px 25px 0;
  background: #20a0ff;
  letter-spacing:5px;
  line-height:40px;
}
.register .login{
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  margin-top:10px;
}
.login navigator{
  display: inline-block;
  color: #20a0ff;
}
