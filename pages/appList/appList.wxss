page{
  font-size:14px;
  margin-bottom: 50px;
}
.app{
  width:100%;
  height:100px;
  overflow:hidden;
  border: 1px solid #f5f5f5;
  box-sizing:border-box;
  padding: 2%;
}
.app .logo{
  display: inline-block;
  width:20%;
  height:100%;
  float:left;
  margin-right: 5%
}
.app .appMsg{
  display:inline-block;
  width:75%;
  height:100%;
  float:left;
  line-height:20px;
}
.appMsg text{
  display:inline-block;
  width:100%;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.appMsg .app-name{
  font-size:16px;
  font-weight: bolder;
}
.app .platformTxt{
  width: initial;
  vertical-align:middle;
}
.app .platform image{
  width:15px;
  height:15px;
  margin-right:8px;
}
.loadMore{
  width:100%;
  
}
.loadMore button{
  font-size:14px;
}
.footer{
  width:100%;
  height: 50px;
  position: fixed;
  bottom: 0;
  font-size:14px;
  background: #fff;
  color:#707070;
  border-top: 1px solid #eee;
}
.footer view{
  display: inline-block;
  width: 50%;
  text-align: center;
}
.footer .list::before, .footer .my::before{
  content: ' ';
  display: block;
  width:20px;
  height: 20px;
  margin: 5px auto;
}
.footer .list::before{
  background: url(../../img/list.svg) no-repeat;
  background-size: contain;
}
.footer .checked::before{
  background: url(../../img/list1.svg) no-repeat;
  background-size: contain;
}
.footer .checked {
  color:#20a0ff;
}
.footer .my::before {
  background: url(../../img/my.svg) no-repeat;
  background-size: contain;
}
